.container
  .icons-box.price-box.style-1.type-3
    .flex-row.fx-col-3
      -@cases.each_with_index do |custom_case, index|
        .icons-wrap
          .icons-item
            .item-box
              %h2.price=custom_case.price
              %p.text-size-medium
                =custom_case.title
              %a.info-btn.open-popup{:href => "#", "data-index" => index} Подробнее


-@cases.each_with_index do |custom_case, index|
  .div{id: "popup_#{index}", class: "case-popup"}
    .popup-inner
      %ul.case-list
        %li.case-item
          .content-element3
            .pre-title=custom_case.title
            %h5.sub-title
              %b=custom_case.subtitle
            %p=custom_case.body
          .content-element3
            .pre-title Адвокат
            %p.text-size-medium=custom_case.author
          .content-element3
            .pre-title Результат
            %p.text-size-medium=custom_case.price
      %button.close-popup
