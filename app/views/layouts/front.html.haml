!!!
%html
  %head
    = metamagic site: @settings.seo.try(:title), title: [:site, :title], separator: " - ", description: [:description, @settings.seo.try(:description)], keywords: [:keywords, "Адвокач", "Ромач-Адвокач", "Шабансебле", @settings.seo.try(:keywords).join(",")], og: {image: @settings.seo.try(:image).url, title: @settings.seo.try(:title), description: @settings.seo.try(:description), url: "#{request.protocol}#{request.host_with_port}", type: "website", locale: 'ru_RU', site_name: @settings.url}
    = stylesheet_link_tag    'front', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Roboto+Condensed:300,300i,400,400i,700,700i%7CFrank+Ruhl+Libre:300,400,500,700,900' 
    = javascript_include_tag 'front', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'https://maps.googleapis.com/maps/api/js?libraries=places&amp;key=AIzaSyBN4XjYeIQbUspEkxCV2dhVPSoScBkIoic'
    %meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no", :name => "viewport"}/
    = csrf_meta_tags

  %body
    / - - - - - - - - - - - - - Wrapper - - - - - - - - - - - - - - - -
    #wrapper.wrapper-container
      / - - - - - - - - - - - - Mobile Menu - - - - - - - - - - - - - -
      =render 'front/navigation/header'
      / - - - - - - - Breadcrumbs - - - - - - - 
      =render 'front/navigation/breadcrumbs'
      / - - - - - - - - - - - - - Content - - - - - - - - - - - - - - - -
      #content{class: @additional_class}
        =yield
      / - - - - - - - - - - - - - Footer - - - - - - - - - - - - - - - -
    =render 'front/navigation/footer'


      


    